<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Registrar usuario</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="mt-3">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="mt-3">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="mt-3">
                        <input type="password" name="password" class="form-control" placeholder="password" value="{{password}}">
                    </div>
                    <div class="mt-3">
                        <input type="password" name="confirm_password" class="form-control" value="{{confirm_password}}" placeholder="Confirm Password" >
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100"> Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>