<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mt-3">
                    <input type="text" class="form-control" name="title" placeholder="title" value="{{note.title}}">
                </div>
                <div class="mt-3">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="mt-3">
                    <button class="btn btn-warning w-100" type="submit"> Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>